[Plugin]
name = SponsorBlock for Bilibili
desc = 自动跳过B站视频中的赞助商片段 - 基于Chrome扩展移植
version = 0.11.2
author = SponsorBlock Team
modified = 2024-01-01
repo = https://github.com/yourusername/sponsorblock-bilibili-loon

# 主脚本文件
script-path = https://raw.githubusercontent.com/yourusername/sponsorblock-bilibili-loon/main/scripts/sponsorblock.js

# 配置文件
resource = config:https://raw.githubusercontent.com/yourusername/sponsorblock-bilibili-loon/main/config/default-config.json

# 图标资源
resource = icon16:https://raw.githubusercontent.com/yourusername/sponsorblock-bilibili-loon/main/icons/IconSponsorBlocker16px.png
resource = icon32:https://raw.githubusercontent.com/yourusername/sponsorblock-bilibili-loon/main/icons/IconSponsorBlocker32px.png
resource = icon64:https://raw.githubusercontent.com/yourusername/sponsorblock-bilibili-loon/main/icons/IconSponsorBlocker64px.png

# 匹配域名
hostname = *.bilibili.com

# 排除直播
exclude = *.live.bilibili.com

# 脚本类型
type = script

# 启用状态
enable = true

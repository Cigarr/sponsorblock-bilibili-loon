[Plugin]
name = SponsorBlock for Bilibili
desc = 自动跳过B站视频中的赞助商片段 - 基于Chrome扩展移植
version = 0.11.2
author = SponsorBlock Team
modified = 2024-01-01
repo = https://github.com/Cigarr/sponsorblock-bilibili-loon

# 主脚本文件
script-path = https://raw.githubusercontent.com/Cigarr/sponsorblock-bilibili-loon/main/scripts/sponsorblock.js

# 配置文件
resource = config:https://raw.githubusercontent.com/Cigarr/sponsorblock-bilibili-loon/main/config/default-config.json

# Base64 图标 (红色SB图标)
resource = icon16:data:image/svg+xml;base64,
resource = icon32:data:image/svg+xml;base64,
resource = icon64:data:image/svg+xml;base64,

# 匹配域名
hostname = *.bilibili.com

# 排除直播
exclude = *.live.bilibili.com

# 脚本类型
type = script

# 启用状态
enable = true
